<Page
    x:Class="TDD_Shooter.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TDD_Shooter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Viewbox>
            <Canvas Width="{x:Bind Path=Model.Width}"
                    Height="{x:Bind Path=Model.Height}">
                <Image Source="{Binding Path=Back.Source}"
                   Width="{Binding Path=Back.Width}"
                   Height="{Binding Path=Back.Height}"
                   Canvas.Left="{Binding Path=Back.X}"
                   Canvas.Top="{Binding Path=Back.Y}"/>
                <Image Source="{Binding Path=Cloud.Source}"
                   Width="{Binding Path=Cloud.Width}"
                   Height="{Binding Path=Cloud.Height}"
                   Canvas.Left="{Binding Path=Cloud.X}"
                   Canvas.Top="{Binding Path=Cloud.Y}"/>
                <Image Source="{Binding Path=Ship.Source}"
                   Width="{Binding Path=Ship.Width}"
                   Height="{Binding Path=Ship.Height}"
                   Canvas.Top="{Binding Path=Ship.Y}"
                   Canvas.Left="{Binding Path=Ship.X}"/>
            </Canvas>
        </Viewbox>

    </Grid>
</Page>
